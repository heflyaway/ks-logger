{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
        "outDir": "lib",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "typings/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}